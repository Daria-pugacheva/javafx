<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <TextArea fx:id="chat" editable="false" VBox.vgrow="ALWAYS">
      <effect>
         <SepiaTone />
      </effect></TextArea>
    <HBox>
        <TextField fx:id="message" onAction="#sendMsg" promptText="Massage field" HBox.hgrow="ALWAYS" />
        <Button onAction="#sendMsg" text="Send" />
    </HBox>

</VBox>
